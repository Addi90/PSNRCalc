#:kivy  1.0


<AppLayout>:
    cols:1

    GridLayout:
        cols:2
        GridLayout:
            cols:1
            FileDropArea:
                text:'Drop original image here'
                id:orig_fda
        GridLayout:
            cols:1
            FileDropArea:
                text:'Drop comparison image here'
                id:comp_fda

    Label:
        text:'Peak Signal-Noise Ratio (PSNR): -'
        id: hello_lb
        font_size: 20

    Button:
        id: enter_btn
        text:'calculate PSNR'
        font_size: 20
        on_press:root.on_enterbtn_pressed(app)
